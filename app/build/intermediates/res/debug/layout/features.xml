<TableLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/featuresLayout"  
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content"  
    android:shrinkColumns="*"  
    android:stretchColumns="*">  
    <TableRow  
        android:id="@+id/tableRow0"  
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"  
        android:gravity="center_horizontal">  
        <TextView  
            android:id="@+id/textViewFeaturesTitle"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"  
            android:textStyle="bold"  
            android:textSize="28sp"  
            android:text="@string/features_label"  
            android:gravity="left"  
            android:layout_span="2" />  
    </TableRow>  
    <TableRow  
        android:layout_height="wrap_content"  
        android:id="@+id/featuresTableRow1"  
        android:layout_width="match_parent">  
		<ImageView
		    android:id="@+id/featureImageViewSwitches"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/switches_feature"
	        android:src="@drawable/ic_led_red_on"
	        android:adjustViewBounds="true"
	        android:maxWidth="24dp"
	        android:maxHeight="24dp" />                
        <TextView  
            android:id="@+id/textViewValue1"  
            android:text="@string/switches_feature"
            android:textSize="24sp"  
            android:gravity="left" />
    </TableRow>  
